<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <Button
        android:id="@+id/buttonTvPower"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="12dp"
        android:text="@string/widget_power_tv"
        android:drawableLeft="@drawable/ic_action_io"/>

    <Button
        android:id="@+id/buttonStbPower"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="12dp"
        android:text="@string/widget_power_stb"
        android:drawableLeft="@drawable/ic_action_io"/>

    <Button
        android:id="@+id/buttonAvrPower"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="12dp"
        android:text="@string/widget_power_avr"
        android:drawableLeft="@drawable/ic_action_io"/>

</LinearLayout>